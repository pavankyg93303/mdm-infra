{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Short prefix for naming resources (lowercase, alphanumeric)."
      },
      "defaultValue": "mdm"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region to deploy into"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "environment": "dev",
        "owner": "mdm-team"
      },
      "metadata": {
        "description": "Tags applied to resources"
      }
    },
    "databricksSku": {
      "type": "string",
      "defaultValue": "premium",
      "metadata": {
        "description": "Databricks workspace SKU (e.g., standard, premium)"
      }
    },
    "synapseSqlAdmin": {
      "type": "string",
      "defaultValue": "sqladminuser",
      "metadata": {
        "description": "Synapse SQL admin username"
      }
    },
    "synapseSqlAdminPassword": {
      "type": "secureString",
      "metadata": {
        "description": "Synapse SQL admin password (secure)"
      }
    },
    "enableKeyVaultPurgeProtection": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable purge protection for Key Vault (requires privileged access)."
      }
    },
    "keyVaultAdminObjectId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "ObjectId of an AAD principal (user/service principal) to add to Key Vault access policy. Leave empty if you will manage access via RBAC later."
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[toLower(substring(concat(parameters('prefix'),'st',uniqueString(resourceGroup().id)),0,24))]",
    "storageAccountName": "[toLower(substring(concat(parameters('prefix'),'st', uniqueString(resourceGroup().id)),0,24))]",
    "datalakeFilesystem": "datalake",
    "databricksWorkspaceName": "[concat(parameters('prefix'), '-dbw')]",
    "keyVaultName": "[concat(parameters('prefix'), '-kv')]",
    "logAnalyticsName": "[concat(parameters('prefix'), '-law')]",
    "adfName": "[concat(parameters('prefix'), '-adf')]",
    "synapseWorkspaceName": "[concat(parameters('prefix'), '-syn')]",
    "managedIdentityDatabricks": "[concat(parameters('prefix'), '-dbi')]",
    "managedIdentityADF": "[concat(parameters('prefix'), '-adfi')]",
    "managedIdentitySynapse": "[concat(parameters('prefix'), '-synid')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "isHnsEnabled": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2021-04-01",
      "name": "[concat(variables('storageAccountName'), '/default/', variables('datalakeFilesystem'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2020-08-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[variables('managedIdentityDatabricks')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[variables('managedIdentityADF')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2018-11-30",
      "name": "[variables('managedIdentitySynapse')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityDatabricks'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityADF'))]"
      ],
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[parameters('keyVaultAdminObjectId')]",
            "permissions": {
              "secrets": [
                "get",
                "list",
                "set",
                "delete"
              ],
              "certificates": [],
              "keys": []
            }
          }
        ],
        "enabledForDeployment": false,
        "enabledForTemplateDeployment": false,
        "enablePurgeProtection": "[parameters('enableKeyVaultPurgeProtection')]",
        "softDeleteRetentionInDays": 90
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Databricks/workspaces",
      "apiVersion": "2018-04-01",
      "name": "[variables('databricksWorkspaceName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedResourceGroupId": "[resourceGroup().id]",
        "parameters": {},
        "sku": {
          "name": "[parameters('databricksSku')]"
        }
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.DataFactory/factories",
      "apiVersion": "2018-06-01",
      "name": "[variables('adfName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentityADF'))]": {}
        }
      },
      "properties": {},
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.Synapse/workspaces",
      "apiVersion": "2021-06-01",
      "name": "[variables('synapseWorkspaceName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentitySynapse'))]"
      ],
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('managedIdentitySynapse'))]": {}
        }
      },
      "properties": {
        "defaultDataLakeStorage": {
          "accountUrl": "[concat('https://', variables('storageAccountName'), '.dfs.core.windows.net')]",
          "filesystem": "[variables('datalakeFilesystem')]"
        },
        "sqlAdministratorLogin": "[parameters('synapseSqlAdmin')]",
        "sqlAdministratorLoginPassword": "[parameters('synapseSqlAdminPassword')]",
        "managedVirtualNetwork": "Default"
      },
      "tags": "[parameters('tags')]"
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2019-09-01",
      "name": "[concat(variables('keyVaultName'), '/', concat(parameters('prefix'), '-synapse-admin'))]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Synapse/workspaces', variables('synapseWorkspaceName'))]"
      ],
      "properties": {
        "value": "[parameters('synapseSqlAdminPassword')]"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2019-09-01",
      "name": "[concat(variables('keyVaultName'), '/', concat(parameters('prefix'), '-storage-name'))]",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "value": "[variables('storageAccountName')]"
      }
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "datalakeFilesystem": {
      "type": "string",
      "value": "[variables('datalakeFilesystem')]"
    },
    "databricksWorkspaceName": {
      "type": "string",
      "value": "[variables('databricksWorkspaceName')]"
    },
    "keyVaultName": {
      "type": "string",
      "value": "[variables('keyVaultName')]"
    },
    "dataFactoryName": {
      "type": "string",
      "value": "[variables('adfName')]"
    },
    "synapseWorkspaceName": {
      "type": "string",
      "value": "[variables('synapseWorkspaceName')]"
    }
  }
}
